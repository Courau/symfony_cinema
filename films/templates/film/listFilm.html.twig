{% block stylesheets %}
    <style type="text/css">
        .all { justify-content: center; }
        .block {  margin: 10% 10% 0% 10%; height: 200px;}
        h2, p, a{ text-align: center;}
    </style>
{% endblock %}

{% block body %}
<section class="all">
    {% for film in films %}
        <div class="block">
            <h2> {{ film.name }} <br> </h2>
            <p> 
                {{ film.description }} <br> <br>
                <a href="{{ path('film', {'id' : film.id}) }}" class="btn btn-primary">Lire la suite </a>
            </p>
        </div>
    {% endfor %}
</section>
{% endblock %}
